<h1>All Questions</h1>
<%= @topic.title %>
<% @questions.each do |question| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= question.title %>
      </h4> 
         <% question.answers.each do |answer| %>
          <p><%= answer.body %></p>
         <% end %>
    </div>
  </div>
<% end %>
