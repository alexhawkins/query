
<!-- show the topics that the question belongs to -->
<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <% @question.topics.each do |topic| %>
     <%= link_to topic.title, topic_path(topic), class: 'label label-primary' %>
    <% end %>
    <!-- show the title of the question -->
    <div id="js-edit-question">
      <h2>
      <strong><%= @question.title %></strong>
      <!-- show an edit button if user is a mebmer of the site -->
        <% if policy(@question).edit? %>
         <%= link_to "Edit", edit_topic_question_path(@topic, @question),  class: 'btn btn-success btn-xs', remote: true %>
        <% end %>
      </h2>
    </div>

    <p class="lead"><%= @question.body %></p>
    <div class="answers-lead js-answers-count">
      <%= @question.answers.count %> Answers 
    </div>
    <%= render partial: 'answers/answers_form', locals: { topic: @topic, question: @question, answer: @answer } %>


    <!-- Render Box to add Ansnwers -->
      <div class="js-answers">
          <%= render @answers %>
      </div>
    </div>

    <!--Sidebar Column -->
  <div class="col-md-4 col-md-offset-1">
      <div class="list-group">
      <a href="#" class="list-group-item active">
        Setup Your Account
      </a>
      <a href="#" class="list-group-item">Visit your feed</a>
      <a href="#" class="list-group-item">Follow more topics</a>
      <a href="#" class="list-group-item">Find your friends on Query</a>
      <a href="#" class="list-group-item">Upvote answers you like</a>
      <a href="#" class="list-group-item">Ask your first question</a>
      <a href="#" class="list-group-item">Add details about what you know</a>
      <a href="#" class="list-group-item">Answer a question</a>
    </div>
    <div class="list-group">
    <a href="#" class="list-group-item active">
      <h4 class="list-group-item-heading">Follow Question</h4>
      <p class="list-group-item-text">
        While not always necessary, sometimes you need to put your DOM in a box. For those situations, try the panel component.
      </p>
    </a>
    <a href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Share Question</h4>
      <p class="list-group-item-text">
        While not always necessary, sometimes you need to put your DOM in a box. For those situations, try the panel component.
      </p>
    </a>
  </div>
  <!---RELATED QUESTIONS -->
  <h3 class="page-header">Related Questions</h3>
    <div class="list-group">
      <!--loop  through each topic association with question object-->
      <% @question.topics.each do |topic| %>
        <!--of the related topics, loop through each question in said topic-->
        <% topic.questions.each do |question| %>
          <%= link_to question.title, topic_question_path(topic, question), class: 'list-group-item'%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
