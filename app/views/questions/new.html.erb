<%= form_for [@topic, @question] do |f| %>
 <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "Ask your question..." %>
</div>
 <div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control', placeholder: "Explain your question further..." %>
</div>
 <div class="form-group">
  <%= f.submit "Save",  class: 'btn btn-success'%>
</div>
<% end %>