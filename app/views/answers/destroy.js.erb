<% if @answer.destroyed? %>
$('#answer-' +<%= @answer.id %>).fadeOut( "slow", function() {
    // Animation complete.
  });
$('.js-answers-count').html("<%= @question.answers.count %> Answers");
<% else %>
$('#answer-' +<%= @answer.id %>).prepend("<div class='alert alert-error'><%= flash[:error] %></div>");
<% end %>