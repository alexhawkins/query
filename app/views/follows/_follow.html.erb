<%= content_tag :div, id: "follow-#{question.id}" do %>
  <div class="follow pull-right">
  <% if current_user %>
    <% if follow = current_user.followed(question)  %>
      <%= link_to [question, follow], title:'Unfollow', remote: true, method: :delete do %>
        <i class="glyphicon glyphicon-check"></i>
      <% end %>
    <% else %>
      <%= link_to [question, Follow.new], title:'Follow', remote: true, method: :post do %>
        <i class="glyphicon glyphicon-unchecked"></i>
      <% end %>
    <% end %>
  <% end %>
  </div>
<% end %>