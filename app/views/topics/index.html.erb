<% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic %> 
            <small>
              (<%= topic.questions.count %>)
            </small>
          </h4>
          <small>
                &raquo; last updated at <%= time_ago_in_words(topic.updated_at) %> ago
          </small>
          </div>
        </div>
<% end %>